@model CoreLib.ClientViewModel.ChangePasswordModel
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="bd-callout" style="margin-bottom: 50px">
    <h3> <strong>Change Password</strong> </h3>
</div>

<div class="container h-100" style="background: inherit">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px; background: linear-gradient(gray,white);">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                            @{
                                if (ViewBag.Error != null)
                                {
                                    <h4 style="color: red;"> Error! @ViewBag.Error </h4>
                                }
                            }
                            <form class="mx-1 mx-md-4" asp-action="ChangePwd" asp-controller="Profile">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" id="oldPwd" class="form-control" asp-for="OldPwd" maxlength="50" required />
                                        <label class="form-label" for="oldPwd">Old Password</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" id="newPwd" class="form-control" asp-for="NewPwd" maxlength="50" required />
                                        <label class="form-label" for="newPwd">Enter your new password</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" id="comfirmPwd" class="form-control" asp-for="ComfirmPwd" maxlength="50" required />
                                        <label class="form-label" for="comfirmPwd">Repeat your password</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


