@using System.Security.Claims

@{
    ViewData["Title"] = "ModifyData";
}

<br />
<div class="bd-callout" style="margin-bottom: 50px">
    <h3> <strong>Profile Modification</strong> </h3>
</div>

<div class="container h-100" style="background: inherit">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px; background: linear-gradient(gray,white);">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <form class="mx-1 mx-md-4" asp-action="ChangeProfile" asp-controller="Profile" method="post">
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <br />
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="name">Your Name</label>
                                        @{
                                            if(ViewBag.Name == null)
                                            {
                                                <input type="text" id="name" class="form-control" name="name" maxlength="50" value="@User.Identity.Name" required />
                                            }
                                            else
                                            {
                                                <input type="text" id="name" class="form-control" name="name" maxlength="50" value="@ViewBag.Name" required />
                                            }
                                        }                                       
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="phone">Your Phone</label>
                                        @{
                                            if (ViewBag.Phone == null)
                                            {
                                                <input type="text" id="phone" class="form-control" name="phone" maxlength="50" value="@User.FindFirstValue("Phone")" required />
                                            }
                                            else
                                            {
                                                <input type="text" id="phone" class="form-control" name="phone" maxlength="50" value="@ViewBag.Phone" required />
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


