                        <GridViewColumn Header="Register Day" Width="100" DisplayMemberBinding="{Binding Path=Initdate}" />
                        <GridViewColumn Header="Modify Date" Width="100" DisplayMemberBinding="{Binding Path=Modifydate}" />
                    </GridView>
                </ListView.View>
            </ListView>-->
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Grid.Column="0">
                <fa:FontAwesome Icon="UserCircle" Height="20" Width="20" Foreground="{StaticResource plainTextColor3}"/>
                <TextBlock Style="{StaticResource textBlockStyle1}" 
                           FontSize="17" 
                           Margin="5,5,0,0" 
                           Text="Name:" />
                <TextBox x:Name="Name2" Text="{Binding Path=Name}" Style="{StaticResource textBoxStyle1}" Width="200"/>
                <fa:FontAwesome Icon="PhoneSquare" Height="20" Width="20" Foreground="{StaticResource plainTextColor3}"/>
                <TextBlock Style="{StaticResource textBlockStyle1}" 
                           FontSize="17" 
                           Margin="5,5,0,0" 
                           Text="Phone:" />
                <TextBox x:Name="Phone" Text="{Binding Path=Phone}" Style="{StaticResource textBoxStyle1}" Width="200"/>
                <Button Style="{StaticResource mainPageBtnModify}"                        
                        Content="Modify" 
                        Width="100" 
                        Margin="50,0,0,0"
                        Cursor="Hand"
                        Click="Modify_Click"/>
                <Button Style="{StaticResource mainPageBtnDelete}" 
                        Content="Delete" 
                        Width="100" 
                        Margin="50,0,0,0" 
                        Cursor="Hand"
                        Click="Delete_Click"/>
                <Button Style="{StaticResource mainPageBtnAdd}" 
                        Content="New Admin" 
                        Width="100" 
                        Margin="50,0,0,0"
                        Cursor="Hand"
                        Click="Button_Click_1"/>
            </StackPanel>

        </Grid>
    </Grid>

</Page>
